<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/backg"
    >



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    app:titleTextAppearance="@style/Toolbar.TitleText"
    android:layout_gravity="center"
    app:title="Kardia"

    >


</androidx.appcompat.widget.Toolbar>

<LinearLayout
    android:id="@+id/lay1"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <TextView

        android:id="@+id/hb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="00"
        android:gravity="right"
android:layout_weight="1"
        android:textColor="@color/text_white"
        android:textSize="30dp"


        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
     />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/textView3"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="نبضك الأن:"
        android:textColor="@color/text_white"
        android:textSize="30dp"
        android:textStyle="bold"
       >


    </TextView>

</LinearLayout>
    <LinearLayout
        android:id="@+id/lay2"
        android:layout_below="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

<LinearLayout
    android:id="@+id/layho1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:layout_marginLeft="20dp"
    android:orientation="vertical"
    android:layout_weight="1"
   >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom_btn"
>       <Button

            android:id="@+id/tips"
            android:layout_width="100dp"
            android:layout_height="100dp"
android:layout_gravity="center"
            android:background="@drawable/advice"
            android:backgroundTintMode="multiply"
            android:backgroundTint="@color/text_white"
            android:layout_marginBottom="10dp"
            android:onClick="tips_method"

            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="نصائح عامة"
        android:textColor="@color/back"
        android:textStyle="bold"
        android:gravity="center"

        ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom_btn"
        >
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:id="@+id/info"
        android:layout_gravity="center"

        android:background="@drawable/profile"

        ></Button>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="معلوماتك"
        android:layout_gravity="center"
        android:textColor="@color/back"
        android:textStyle="bold"
        android:gravity="center"
></TextView>
    </LinearLayout>
</LinearLayout>
        <LinearLayout
            android:layout_below="@+id/layho1"
            android:id="@+id/lahho2"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_weight="1"
            android:orientation="vertical"

            >



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"

                android:background="@drawable/custom_btn"
                >
            <Button
                android:id="@+id/btn_alarm"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/alarm"
                android:onClick="setAlarm"
android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:layout_gravity="right"
            android:gravity="center"
            android:text="التنبيه"
            android:textStyle="bold"
            android:textColor="@color/back"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"

            android:layout_below="@+id/btn_alarm">

        </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_btn"
                >
            <Button
                android:id="@+id/btn_about"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/know"
                android:onClick="info"
                android:layout_marginBottom="10dp"
android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="أعرف مرضك"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/back"
                android:layout_below="@+id/btn_about"

                ></TextView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/custom_btn"

    >
    <Button
        android:id="@+id/btn_history"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/heartbeat"
        android:onClick="follow_hb"

        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تابع نابضك"
        android:gravity="center"
        android:textColor="@color/back"
        android:textStyle="bold"
        ></TextView>


</LinearLayout>








        <LinearLayout
            android:layout_below="@+id/lay2"
           android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/text_tware2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="طوارئ"
                android:textColor="@color/text_white"
                android:textSize="30dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="685dp">

            </TextView>

            <TextView
                android:id="@+id/addinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="أضف معلومات عنك"
                android:textColor="@color/text_white"
                android:textSize="30dp"
                android:textStyle="bold"
                >

            </TextView>

            <TextView
                android:id="@+id/papaer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="أوراقك"
                android:textColor="@color/text_white"
                android:textSize="30dp"
                android:textStyle="bold"
                >

            </TextView>



        </LinearLayout>







    </LinearLayout>
</ScrollView>
</RelativeLayout>